<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="ReCallVocabulary.Pages.StatsPage"
             Title="StatsPage">
    <VerticalStackLayout>
        <Label Text="The number of added and recalled per day:" 
               x:Name="textLabel" 
               HorizontalOptions="Center"/>
        <micro:ChartView x:Name="AddedChart" HeightRequest="200"
                         HorizontalOptions="Fill"/>
        <micro:ChartView x:Name="RecalledChart" HeightRequest="200"
                         HorizontalOptions="Fill"/>
    </VerticalStackLayout>
</ContentPage>